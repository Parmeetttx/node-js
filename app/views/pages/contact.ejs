<%-include('../component/head.ejs')-%>
<%-include('../component/header.ejs')-%> 
<%-include('../component/slider.ejs')-%>

<div class="container section-entry">
    <div class="row">
        <div class="col-lg-6">
            <div class="section">
                <h2><%- Page.Heading -%></h2>
            </div>
        </div>
        <div class="col-lg-6">
            <form action="/email_submit" method="post">    
                <div class="row g-3">
                    <div class="col-sm-6  col-md-12">
                        <div class="form-floating">
                            <input type="text" class="form-control" name="name" id="name" placeholder="Your Name" required="">
                            <label for="name">Your Name</label>
                        </div>
                    </div>
                    <div class="col-sm-6  col-md-12">
                        <div class="form-floating">
                            <input type="email" class="form-control" name="from" id="name" placeholder="Your Name" required="">
                            <label for="name">Your Email</label>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-12">
                        <div class="form-floating">
                            <input type="tel" class="form-control" name="phone" id="phone" placeholder="Your Mobile" required="">
                            <label for="mobile">Your Mobile</label> 
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-12">
                        <div class="">

                            <select class="form-select" name="product" aria-label="Default select example">
                                <option value="">Select Product </option>
                                <% Products.forEach((prod_list) => { %>
                                    <option value="<%-prod_list.Heading-%>"><%-prod_list.Heading -%></option>
                                <% }) %>
                              </select>

                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            <textarea class="form-control" name="message" placeholder="Message here for Requirement" id="message" required=""></textarea>
                            <label for="message">Your Requirement</label>
                        </div>
                    </div>
                    <!-- <div class="col-sm-6  col-md-12">
                        <div class="form-floating">
                            <input type="file" class="form-control" name="attachment" id="name" placeholder="Your Name" required="">
                            <label for="name">Your Attachment</label>
                        </div>
                    </div> -->
                    <div class="col-12 text-center">
                        <button class="btn" type="submit">Submit Now</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<%-include('../component/footer.ejs')-%>