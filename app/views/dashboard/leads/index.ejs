<%-include('../component/header.ejs')-%>
<div class="container-fluid">
    <div class="row">

        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="dataTable" width="100%"
                    cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Product</th>
                            <th>Date</th>
                            <th>View Details</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% Data.forEach((data , index) => { %>
                            <tr>
                                <td><%- index + 1 %></td>
                                <td><%- data.Name -%></td>
                                <td><%- data.Email -%></td>
                                <td><%- data.Product -%></td>
                                <!-- <td><%- new Date(data.Date).toLocaleString() -%></td> -->
                                <td><%- data.Date.toLocaleString() -%></td>
                                <td>
                                    <a class="btn btn-primary"
                                    href="/dashboard/">View Details</a>
                        <% }) %>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%-include('../component/footer.ejs')-%>