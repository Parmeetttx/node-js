<%-include('../component/header.ejs')-%> 


<div class="container-fluid">
    <div class="row">

        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Photo</th>
                            <!-- <th>Status</th> -->
                            <th>Operation</th>
                        </tr>
                    </thead>
                    <tbody>

                    <% Data.forEach((Page_Data , index)  => { 
                        let page_name = Page_Data.Heading;
                        let defaultimg = '/images/no-image.jpg';
                        let adminimg = Page_Data.Photo ? Page_Data.Photo : defaultimg;
                        let pagePhoto = adminimg === defaultimg ? defaultimg : `/images/pages/${adminimg}`;
                    %>

                    
                        <tr>
                            <td class="active"> <%-index + 1 -%><span>.</span></td>
                            <td><%- page_name -%></td>
                            <td><img style="height: 80px;" src="<%- pagePhoto -%>" ></td>
                            <!-- <td> <select name="" id="">
                                <option value="">Active</option>
                                <option value="">Inactive</option>
                            </select> </td> -->
                            <td> 
                                <div class="operation">
                                    <a class="btn btn-primary" href="/dashboard/pages/edit/<%-Page_Data.url-%>/"><i class="fa-solid fa-file-pen"></i></a>                     
                                    <form style="display: inline;" action="/dashboard/pages/delete/<%-Page_Data._id%>?_method=DELETE" method="POST">
                                        <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2"><i class="fa-solid fa-trash-can"></i></button>
                                    </form>
                                </div>    
                            </td>
                        </tr>

                    <% }) %>    
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-12 text-center">
            <a href="/dashboard/pages/add" class="btn btn-success" >Add More Pages</a>
        </div>
    </div>
</div>

<%-include('../component/footer.ejs')-%>