<%-include('../component/header.ejs')-%> 

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="dashboard-content-area">
                <!-- put your contente -->

               <h1 class="mb-2 mt-2">Add locations</h1>
    
    <form method="post" action="/dashboard/locations/add">

      <div class="mb-3 mt-3 row g-9 align-items-center">
        <div class="col col-lg-2"><label class="form-label">Name</label></div>
        <div class="col"><input type="text" name="Heading" class="form-control" placeholder="Page Heading"></div>
      </div>

      <div class="mb-3 mt-3 row g-9 align-items-center"> 
        <div class="col col-lg-2"><label class="form-label">Parent</label></div>
        <div class="col">
            <option value="">Select Parent</option> 
            <select name="Parent" class="form-select form-control">
                <option value="">Select Parent</option>

                <% Locations.forEach((lists) => { 
                    if(lists.Parent === null){ %>
                    <option value="<%-lists._id-%>"><%-lists.Heading -%></option>
                    <% }%>
                <% }) %>
                
            </select>
        </div>
      </div>

      <div class="mb-5 mt-3 align-items-center text-center"> 
           <button type="submit" class="btn btn-primary">Submit Data</button>
      </div>
    </form>

              <!-- end your content here -->
             </div>
        </div>
    </div>
</div>

<%-include('../component/footer.ejs')-%>